{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@tinijs/ui": ["./.tini-ui"],
      "@tinijs/ui/*": ["./.tini-ui/*"]
    }
  },
  "include": ["cli/**/*.ts"]
}
